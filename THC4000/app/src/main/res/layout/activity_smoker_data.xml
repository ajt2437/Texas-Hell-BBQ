<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    tools:context="com.dncdevelopment.thc4000.SmokerDataActivity">


    <TextView
        android:id="@+id/status_bluetooth_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Not connected"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/bluetooth_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@android:drawable/stat_sys_data_bluetooth"
        android:text="@string/connect_label_button"/>

    <TextView
        android:id="@+id/message_text_view"
        android:hint="message populate here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/status_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Status label"
        android:layout_gravity="center"/>

</LinearLayout>
